<h2>Click the travel plans you wish to delete:</h2>

  <table>
    <tr>
      <th>ID</th>
      <th>Event ID</th>
      <th>Location ID</th>
    </tr>
  <% Travel.sorted_event.each do |travel| %>
    <tr>
      <td>
        <a href="/delete_travel/<%= travel.id %>"> 
          <%= travel.id %>
        </a>
      </td>
      <td><%= travel.events_id %></td>
      <td><%= travel.locations_id %></td>
    </tr>
    <% end %>
  </table>
  
  <h3>Event List</h3>
  <table>
    <tr>
      <th>ID</th>
      <th>Event Name</th>
      <th>Application ID</th>
      <th>Event Date</th>
      <th>Check In Time</th>
      <th>Location Id</th>
      <th>Ammenities</th>
      <th>Contact Email</th>
      <th>Contact Phone</th>  
    </tr>
    <% Event.all_sorted_by_date.each do |event| %>
    <tr>
      <td><%= event.id %></td>
      <td><%= event.name %></td>
      <td><%= event.applications_id %></td>
      <td><%= event.event_date %></td>
      <td><%= event.check_in_time %></td>
      <td><%= event.locations_id %></td>
      <td><%= event.ammenities %></td>
      <td><%= event.contact_email %></td>
      <td><%= event.contact_phone %></td>
    </tr>
    <% end %>
  </table>



  <h3>Location List</h3>
  <table>
    <tr>
      <th>ID</th>
      <th>City</th>
      <th>State</th>
      <th>Address</th>
    </tr>
    <% Location.sorted.each do |location| %>
    <tr>
      <td><%= location.id %></td>
      <td><%= location.city %></td>
      <td><%= location.state %></td>
      <td><%= location.address %></td>
    </tr>
    <% end %>
  </table>