<h2 class= centered>Here is the event you requested:</h2>

<table class= centered>
  <tr>
    <th>ID</th>
    <th>Event Name</th>
    <th>Application ID</th>
    <th>Event Date</th>
    <th>Check In Time</th>
    <th>Location Id</th>
    <th>Ammenities</th>
    <th>Contact Email</th>
    <th>Contact Phone</th>  
  </tr>
   <% @view.each do |event| %>
  <tr>
    <td><%= event.id %></td>
    <td><%= event.name %></td>
    <td><%= event.applications_id %></td>
    <td><%= event.event_date %></td>
    <td><%= event.check_in_time %></td>
    <td><%= event.locations_id %></td>
    <td><%= event.ammenities %></td>
    <td><%= event.contact_email %></td>
    <td><%= event.contact_phone %></td>
  </tr>
  <% end %>
</table>

<h3 class= centered>Application List</h3>
<table class= centered>
  <tr>
    <th>ID</th>
    <th>Event Id</th>
    <th>Application Fee</th>
    <th>Event Fee</th>
    <th>Submitted?</th>
    <th>Accepted?</th>
    <th>Due Date</th>
    <th>Location Id</th>
    <th>Application Details</th>  
  </tr>
  <% Application.all_sorted_by_date.each do |app| %>
  <tr>
    <td><%= app.id %></td>
    <td><%= app.events_id %></td>
    <td><%= app.application_fee %></td>
    <td><%= app.event_fee %></td>
    <td><%= app.submitted %></td>
    <td><%= app.accepted %></td>
    <td><%= app.due_date %></td>
    <td><%= app.locations_id %></td>
    <td><%= app.application_details %></td>
  </tr>
  <% end %>
</table>



<h3 class= centered>Location List</h3>
<table class= centered>
  <tr>
    <th>ID</th>
    <th>City</th>
    <th>State</th>
    <th>Address</th>
  </tr>
  <% Location.sorted.each do |location| %>
  <tr>
    <td><%= location.id %></td>
    <td><%= location.city %></td>
    <td><%= location.state %></td>
    <td><%= location.address %></td>
  </tr>
  <% end %>
</table>

<div class= centered><a href="/home">Main Menu</a></div>

