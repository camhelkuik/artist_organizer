<h2>Please enter the new event information:</h2>

<form action="/change_event/<%= params["x"] %>">
  <input type="text" placeholder="Enter name" name="name" value="<%= @entry.name %>">
  <input type="number" placeholder="Enter application id" name="applications_id" value="<%= @entry.applications_id %>">
  <input type="text" placeholder="Enter date" name="event_date" value="<%= @entry.event_date %>">
  <input type="text" placeholder="Check in time" name="check_in_time" value="<%= @entry.check_in_time %>">
  <input type="number" placeholder="Enter location ID" name="locations_id" value="<%= @entry.locations_id %>">
  <input type="text" placeholder="ammenities" name="ammenities" value="<%= @entry.ammenities %>">
  <input type="text" placeholder="Contact email address" name="contact_email" value="<%= @entry.contact_email %>">
  <input type="text" placeholder="Contact phone" name="contact_phone" value="<%= @entry.contact_phone %>">
  
  <input type="submit">
</form>

<h3>Application List</h3>
<table>
  <tr>
    <th>ID</th>
    <th>Event Id</th>
    <th>Application Fee</th>
    <th>Event Fee</th>
    <th>Submitted?</th>
    <th>Accepted?</th>
    <th>Due Date</th>
    <th>Location Id</th>
    <th>Application Details</th>  
  </tr>
  <% Application.all_sorted_by_date.each do |app| %>
  <tr>
    <td><%= app.id %></td>
    <td><%= app.events_id %></td>
    <td><%= app.application_fee %></td>
    <td><%= app.event_fee %></td>
    <td><%= app.submitted %></td>
    <td><%= app.accepted %></td>
    <td><%= app.due_date %></td>
    <td><%= app.locations_id %></td>
    <td><%= app.application_details %></td>
  </tr>
  <% end %>
</table>



<h3>Location List</h3>
<table>
  <tr>
    <th>ID</th>
    <th>City</th>
    <th>State</th>
    <th>Address</th>
  </tr>
  <% Location.sorted.each do |location| %>
  <tr>
    <td><%= location.id %></td>
    <td><%= location.city %></td>
    <td><%= location.state %></td>
    <td><%= location.address %></td>
  </tr>
  <% end %>
</table>